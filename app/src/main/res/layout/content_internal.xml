<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_internal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.jerem.teachersassistant.InternalActivity"
    tools:showIn="@layout/activity_internal">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="47dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
        android:text="Class:"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/textView20"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="normal|bold"
            android:layout_weight="0.56"
            android:textAlignment="viewEnd" />


        <Spinner
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/spinner7"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Spinner
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/spinner8"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Spinner
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/spinner9"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Spinner
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:id="@+id/spinner10"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="1">


        <TextView
            android:text="Semester:"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView23"
            android:textStyle="normal|bold"
            android:textAlignment="viewEnd" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner13" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <TextView
            android:text="Faculty:"
            android:layout_width="72dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            android:textStyle="normal|bold"
            android:textAlignment="viewEnd" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner11"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">


        <TextView
            android:text="Subject:"
            android:layout_width="71dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView24"
            android:textStyle="normal|bold"
            android:textAlignment="viewEnd" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner14"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:orientation="horizontal">

        <TextView
            android:text="Evaluation:"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:id="@+id/textView22"
            android:textStyle="normal|bold"
            android:textAlignment="viewEnd" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner12"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:orientation="horizontal">

    <TextView
        android:text="Componant:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView25"
        android:textStyle="normal|bold"
        android:textAlignment="viewEnd" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinner15"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:orientation="horizontal"
        android:weightSum="1">


        <TextView
            android:text="Date:"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView26"
            android:textStyle="normal|bold"
            android:textAlignment="viewEnd" />

        <DatePicker
            android:layout_width="241dp"
            android:layout_height="match_parent"
            android:id="@+id/datePicker"
            android:layout_marginLeft="55dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="Submit"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:layout_weight="0.07"
            android:onClick="pro"
            android:layout_marginLeft="45dp"/>

        <Button
            android:text="close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:layout_weight="0.07"
            android:layout_marginLeft="65dp"/>


    </LinearLayout>

</LinearLayout>


</ScrollView>
</RelativeLayout>
